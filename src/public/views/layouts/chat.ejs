<h2 class="text-center fs-2 fw-bolder my-5">Centro de Mensajes</h2>
<form
	id="formChat"
	class="container"
>
	<div class="mb-3">
		<label
			for="inputName"
			class="form-label fw-bolder"
			>Nombre de Usuaio</label
		>
		<input
			type="text"
			class="form-control"
			id="inputName"
			required
		/>
	</div>
	<div class="mb-3">
		<label
			for="inputMessage"
			class="form-label fw-bolder"
			>Mensaje</label
		>
		<input
			type="text"
			class="form-control"
			id="inputMessage"
			required
		/>
	</div>
	<div class="d-flex justify-content-center mt-5">
		<button
			id="btnSend"
			class="btn btn-outline-dark px-4"
		>
			Enviar
		</button>
	</div>
</form>
<div
	id="messages"
	class="container m-5 p-5"
></div>
