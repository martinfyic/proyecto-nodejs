<div class="w-50">
	<form
		id="formChat"
		class="container"
	>
		<div class="mb-3">
			<label
				for="inputEmail"
				class="form-label fw-bolder"
				>Email de Usuaio</label
			>
			<input
				type="email"
				class="form-control"
				id="inputEmail"
				required
			/>
		</div>
		<div class="mb-3">
			<label
				for="inputName"
				class="form-label fw-bolder"
				>Nombre</label
			>
			<input
				type="text"
				class="form-control"
				id="inputName"
				required
			/>
		</div>
		<div class="mb-3">
			<label
				for="inputLastName"
				class="form-label fw-bolder"
				>Apellido</label
			>
			<input
				type="text"
				class="form-control"
				id="inputLastName"
				required
			/>
		</div>
		<div class="mb-3">
			<label
				for="inputAge"
				class="form-label fw-bolder"
				>Edad</label
			>
			<input
				type="number"
				class="form-control"
				id="inputAge"
				required
			/>
		</div>
		<div class="mb-3">
			<label
				for="inputAlias"
				class="form-label fw-bolder"
				>Alias</label
			>
			<input
				type="text"
				class="form-control"
				id="inputAlias"
				required
			/>
		</div>
		<div class="mb-3">
			<label
				for="inputAvatar"
				class="form-label fw-bolder"
				>Avatar</label
			>
			<input
				type="text"
				class="form-control"
				id="inputAvatar"
				required
			/>
		</div>
		<div class="mb-3">
			<label
				for="inputMessage"
				class="form-label fw-bolder"
				>Mensaje</label
			>
			<textarea
				type="text"
				class="form-control"
				id="inputMessage"
				style="height: 200px"
				required
			></textarea>
		</div>
		<div class="d-flex justify-content-center mt-5">
			<button
				id="btnSend"
				class="btn btn-outline-dark px-4"
			>
				Enviar
			</button>
		</div>
	</form>
</div>
